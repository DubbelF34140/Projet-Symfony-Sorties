{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre et badge d'état de la sortie -->
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-4">{{ sortie.nom|capitalize }}</h1>
            <h1>
                <span class="badge
                    {% if sortie.etat.libelle == 'Ouverte' %}
                        bg-success
                    {% elseif sortie.etat.libelle == 'Clôturée' %}
                        bg-warning
                    {% elseif sortie.etat.libelle == 'Annulée' %}
                        bg-danger
                    {% elseif sortie.etat.libelle == 'En cours' %}
                        bg-info
                    {% else %}
                        bg-secondary
                    {% endif %}
                ">
                    {{ sortie.etat.libelle }}
                </span>
            </h1>
        </div>

        <!-- Section des détails de la sortie et la carte -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body" style="background-color: rgba(0, 0, 0, 0.2); border-radius: 5px">
                        <h2 class="text-primary">Détails de la sortie</h2>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Campus :</strong> {{ sortie.campus.nom }}</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Date et heure :</strong> {{ sortie.dateHeureDebut | date("d/m/Y H:i") }}</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Date limite d'inscription :</strong> {{ sortie.dateLimiteInscription | date("d/m/Y") }}</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Lieu :</strong> {{ sortie.lieu.nom }}, {{ sortie.lieu.rue }}, {{ sortie.lieu.ville.nom }}, {{ sortie.lieu.ville.codePostal }}</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Nombre de places :</strong> {{ sortie.nbInscriptionMax }}</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Durée :</strong> {{ sortie.duree }} minutes</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Latitude/Longitude :</strong> {{ sortie.lieu.latitude }}/{{ sortie.lieu.longitude }}</li>
                            <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Description :</strong> {{ sortie.infosSortie }}</li>
                            {% if sortie.organisateur %}
                                <li class="list-group-item" style="background-color: rgb(204,204,204);"><strong>Organisateur :</strong> {{ sortie.organisateur.pseudo }}</li>
                            {% endif %}
                        </ul>
                    </div>
                </div>

                <!-- Section des détails d'annulation si la sortie est annulée -->
                {% if sortie.etat.libelle == 'Annulée' %}
                    <div class="card mb-2 shadow-sm border-0">
                        <div class="card-body" style="background-color: rgb(204,204,204);border-radius: 5px">
                            <h5 class="card-title text-danger">Détails de l'annulation</h5>
                            <p class="card-text">{{ sortie.infosuppr }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Carte de localisation (col-md-6 pour 50% de l'écran) -->
                <div class="col-md-6" style="background-color: rgb(204,204,204);border-radius: 5px">
                    <div class="card-body">
                        <h2 class="text-primary">Localisation</h2>
                        <div id="map" style="height: 400px; width: 100%;" class="border rounded shadow-sm"></div>
                    </div>
                </div>
        </div>

        <!-- Section de la liste des participants -->
        <h2 class="mt-5 mb-3">Liste des Participants</h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    <tr>
                        <td>{{ p.pseudo }}</td>
                        <td>
                            <a href="{{ path('app_participant_view', {id: p.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-user"></i> Voir Profil
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center text-muted">Aucun participant inscrit pour cette sortie.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Bouton de retour -->
        <a href="{{ path('app_sortie') }}" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Retour à la liste des sorties
        </a>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- Inclure Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />

    <!-- Inclure Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Coordonnées latitude et longitude de la sortie
            const latitude = {{ sortie.lieu.latitude }};
            const longitude = {{ sortie.lieu.longitude }};

            // Initialisation de la carte
            const map = L.map('map').setView([latitude, longitude], 13);

            // Ajouter une couche de tuiles (carte de fond)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap'
            }).addTo(map);

            // Ajouter un marqueur aux coordonnées de la sortie
            L.marker([latitude, longitude]).addTo(map)
                .bindPopup("{{ sortie.lieu.nom }}")
                .openPopup();
        });
    </script>
{% endblock %}
