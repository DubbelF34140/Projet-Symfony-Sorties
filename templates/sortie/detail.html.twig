{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-4">{{ sortie.nom }}</h1>
            <!-- Badge d'état à droite, à côté du titre -->
            <h1><span class="badge
                {% if sortie.etat.libelle == 'Ouverte' %}
                    bg-success
                {% elseif sortie.etat.libelle == 'Clôturée' %}
                    bg-warning
                {% elseif sortie.etat.libelle == 'Annulée' %}
                    bg-danger
                {% elseif sortie.etat.libelle == 'En cours' %}
                    bg-info
                {% else %}
                    bg-secondary
                {% endif %}
            ">
                {{ sortie.etat.libelle }}
                    </span>
            </h1>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Détails de la sortie</h5>
                        <p class="card-text"><strong>Campus :</strong> {{ sortie.campus.nom }}</p>
                        <p class="card-text"><strong>Date et heure :</strong> {{ sortie.dateHeureDebut | date("d/m/Y H:i") }}</p>
                        <p class="card-text"><strong>Date limite d'inscription :</strong> {{ sortie.dateLimiteInscription | date("d/m/Y") }}</p>
                        <p class="card-text"><strong>Lieu :</strong> {{ sortie.lieu.nom }}, {{ sortie.lieu.rue }}, {{ sortie.lieu.ville.nom }}, {{ sortie.lieu.ville.codePostal }}</p>
                        <p class="card-text"><strong>Nombre de places :</strong> {{ sortie.nbInscriptionMax }}</p>
                        <p class="card-text"><strong>Durée :</strong> {{ sortie.duree }} minutes</p>
                        <p class="card-text"><strong>Latitude/Longitude :</strong> {{ sortie.lieu.latitude }}/{{ sortie.lieu.longitude }}</p>
                        <p class="card-text"><strong>Description :</strong> {{ sortie.infosSortie }}</p>
                        {% if sortie.organisateur %}
                            <p class="card-text"><strong>Organisateur :</strong> {{ sortie.organisateur.pseudo }}</p>
                        {% endif %}
                    </div>
                </div>
                {% if sortie.etat.libelle == 'Annulée' %}
                    <div class="card mb-2 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Détails de l'annulation</h5>
                            <p class="card-text">{{ sortie.infosuppr }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div>
            <h2>Localisation</h2>
            <div id="map" style="height: 400px; width: 100%;"></div>
        </div>

        <h2 class="mt-5 mb-3">Liste des Participants</h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for p in participants %}
                    <tr>
                        <td>{{ p.pseudo }}</td>
                        <td>
                            <a href="{{ path('app_participant_view', {id: p.id}) }}" class="btn btn-primary btn-sm">Voir Profil</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">Aucun participant inscrit pour cette sortie.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_sortie') }}" class="btn btn-secondary mt-3">Retour à la liste des sorties</a>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- Inclure Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />

    <!-- Inclure Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Coordonnées latitude et longitude de la sortie
            const latitude = {{ sortie.lieu.latitude }};
            const longitude = {{ sortie.lieu.longitude }};

            // Initialisation de la carte
            const map = L.map('map').setView([latitude, longitude], 13);

            // Ajouter une couche de tuiles (carte de fond)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap'
            }).addTo(map);

            // Ajouter un marqueur aux coordonnées de la sortie
            L.marker([latitude, longitude]).addTo(map)
                .bindPopup("{{ sortie.lieu.nom }}")
                .openPopup();
        });
    </script>
{% endblock %}
