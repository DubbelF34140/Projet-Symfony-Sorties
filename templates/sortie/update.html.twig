{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <h1>Modifier une sortie</h1>

    {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_label(form.nom, 'Nom de la sortie') }}
            {{ form_widget(form.nom) }}
            <div class="text-danger">
                {{ form_errors(form.nom) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.dateHeureDebut, 'Date et heure de la sortie') }}
            {{ form_widget(form.dateHeureDebut, {'attr': {'class': 'datetimepicker'}}) }}
            <div class="text-danger">
                {{ form_errors(form.dateHeureDebut) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.dateLimiteInscription, 'Date limite d\'inscription') }}
            {{ form_widget(form.dateLimiteInscription, {'attr': {'class': 'datepicker'}}) }}
            <div class="text-danger">
                {{ form_errors(form.dateLimiteInscription) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.nbInscriptionMax, 'Nombre de places') }}
            {{ form_widget(form.nbInscriptionMax) }}
            <div class="text-danger">
                {{ form_errors(form.nbInscriptionMax) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.duree, 'Durée (en minutes)') }}
            {{ form_widget(form.duree) }}
            <div class="text-danger">
                {{ form_errors(form.duree) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.infosSortie, 'Description et infos') }}
            {{ form_widget(form.infosSortie) }}
        </div>
    </div>

    <div class="form-group">
        <label for="ville">Ville</label>
        <select id="ville" class="form-control">
            <option value="">Sélectionnez une ville</option>
            {% for ville in villes %}
                <option value="{{ ville.id }}">{{ ville.nom }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        {{ form_label(form.lieu, 'Lieu') }}
        {{ form_widget(form.lieu, {'attr': {'disabled': true}}) }} <!-- Désactivé par défaut -->
    </div>

    <div class="form-actions">
        <button type="submit" name="save" class="btn btn-primary">Enregistrer</button>
        <button type="submit" name="publish" class="btn btn-success">Publier</button>
        <a href="{{ path('app_sorties_delete', {id:sortie.id}) }}" class="btn btn-warning">Supprimer</a>
        <a href="{{ path('app_sortie') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const villeSelect = document.querySelector('#ville');
            const lieuSelect = document.querySelector('#{{ form.lieu.vars.id }}'); // Sélecteur basé sur l'ID du widget lieu

            // Désactiver le champ lieu au chargement de la page
            lieuSelect.disabled = true;

            villeSelect.addEventListener('change', function () {
                const villeId = villeSelect.value;

                if (villeId) {
                    // Activer le champ lieu lorsque la ville est sélectionnée
                    lieuSelect.disabled = false;

                    // Charger les lieux via Ajax
                    fetch(`/api/lieux/${villeId}`)
                        .then(response => response.json())
                        .then(data => {
                            // Vider le select des lieux
                            lieuSelect.innerHTML = '<option value="">Sélectionnez un lieu</option>';

                            // Ajouter les lieux reçus
                            data.forEach(lieu => {
                                const option = document.createElement('option');
                                option.value = lieu.id;
                                option.textContent = lieu.nom;
                                lieuSelect.appendChild(option);
                            });
                        });
                } else {
                    // Désactiver le champ lieu si aucune ville n'est sélectionnée
                    lieuSelect.disabled = true;
                    lieuSelect.innerHTML = '<option value="">Sélectionnez une ville d\'abord</option>';
                }
            });
        });
    </script>
{% endblock %}