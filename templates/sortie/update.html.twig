{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <h1>Modifier une sortie</h1>

    {{ form_start(form) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_label(form.nom, 'Nom de la sortie') }}
            {{ form_widget(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateHeureDebut, 'Date et heure de la sortie') }}
            {{ form_widget(form.dateHeureDebut, {'attr': {'class': 'datetimepicker'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateLimiteInscription, 'Date limite d\'inscription') }}
            {{ form_widget(form.dateLimiteInscription, {'attr': {'class': 'datepicker'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nbInscriptionMax, 'Nombre de places') }}
            {{ form_widget(form.nbInscriptionMax) }}
        </div>

        <div class="form-group">
            {{ form_label(form.duree, 'Durée (en minutes)') }}
            {{ form_widget(form.duree) }}
        </div>

        <div class="form-group">
            {{ form_label(form.infosSortie, 'Description et infos') }}
            {{ form_widget(form.infosSortie) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            {{ form_label(form.lieu, 'Lieu') }}
            {{ form_widget(form.lieu) }}
        </div>
        <div class="form-group">
            Rue : {{ sortie.lieu.rue }}
            CP : {{ sortie.lieu.ville.codePostal }}
            Latitude/Longitude : {{ sortie.lieu.latitude}}/{{ sortie.lieu.longitude}}
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" name="save" class="btn btn-primary">Enregistrer</button>
        <button type="submit" name="publish" class="btn btn-success">Publier</button>
        <button type="submit" name="delete" class="btn btn-success">Supprimer</button>
        <a href="{{ path('app_sortie') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>

    {{ form_end(form) }}
{% endblock %}