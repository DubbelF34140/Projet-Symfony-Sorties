{% extends 'base.html.twig' %}

{% block title %}Détails de la sortie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">{{ sortie.nom }}</h1>

        <div class="row">
            <div class="col-md-6">
                <h5>Organisateur:</h5>
                <p>{{ sortie.organisateur.nom }}</p>
            </div>

            <div class="col-md-6">
                <h5>Campus:</h5>
                <p>{{ sortie.campus.nom }}</p>
            </div>


            <div class="col-md-6">
                <h5>Date et heure de début:</h5>
                <p>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</p>
            </div>

            <div class="col-md-6">
                <h5>Date limite d'inscription:</h5>
                <p>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</p>
            </div>

            <div class="col-md-6">
                <h5>Lieu:</h5>
                <p>{{ sortie.lieu.nom }} - {{ sortie.lieu.ville.nom }} ({{ sortie.lieu.ville.codePostal }})</p>
            </div>

            <div class="col-md-6">
                <h5>Nombre de places:</h5>
                <p>{{ sortie.nbInscriptionMax }}</p>
            </div>

            <div class="col-md-6">
                <h5>Nombre d'inscrits:</h5>
                <p>{{ sortie.inscrits|length }}</p>
            </div>

            <div class="col-md-6">
                <h5>État de la sortie:</h5>
                <p><span class="badge bg-info">{{ sortie.etat.libelle }}</span></p>
            </div>

            <div class="col-md-12">
                <h5>Description:</h5>
                <p>{{ sortie.infosSortie }}</p>
            </div>
        </div>

        <hr>

        <h3>Participants</h3>
        <ul class="list-group mb-4">
            {% for inscrit in sortie.inscrits %}
                <li class="list-group-item">{{ inscrit.nom }}</li>
            {% else %}
                <li class="list-group-item">Aucun participant inscrit.</li>
            {% endfor %}
        </ul>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_sortie') }}" class="btn btn-outline-secondary">Retour à la liste</a>
            {% if app.user in sortie.inscrits %}
                <a href="{{ path('app_sorties_desister', {id: sortie.id}) }}" class="btn btn-warning">Se désister</a>
            {% elseif sortie.etat.libelle == 'Ouverte' and sortie.inscrits|length < sortie.nbInscriptionMax %}
                <a href="{{ path('app_sorties_register', {id: sortie.id}) }}" class="btn btn-success">S'inscrire</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
