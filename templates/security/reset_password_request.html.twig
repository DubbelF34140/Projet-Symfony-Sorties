{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation du mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        .reset-container {
            margin-top: 100px;
            display: flex;
            justify-content: center;
        }

        .card {
            width: 100%;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-radius: 10px 10px 0 0;
            text-align: center;
            padding: 15px;
        }

        .form-control {
            border-radius: 50px;
            padding: 10px 20px;
        }

        .btn-primary {
            border-radius: 50px;
            width: 100%;
            padding: 10px;
            margin-top: 15px;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="reset-container" style="margin-bottom: 100px">
        <div class="card">
            <div class="card-header">
                <h1 class="h3">Réinitialisation du mot de passe</h1>
            </div>

            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-envelope"></i> Demander la réinitialisation
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
