{% extends 'base.html.twig' %}

{% block title %}Gérer les campus{% endblock %}
{% block stylesheets %}
    <!-- Utilisation de la version 5.3 de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
{% endblock %}

{% block body %}
    <h2 class="mt-4">Liste des campus</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Campus</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.nom }}</td>
                <td>
                    <a href="{{ path('campus_edit', {id: campus.id}) }}" class="btn btn-warning">Modifier</a>
                    <form method="post" action="{{ path('campus_delete', {id: campus.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campus.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        <tr>
            {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
            <td>
                {{ form_widget(form.nom) }}
                <div class="text-danger">
                    {{ form_errors(form.nom) }}
                </div>
            </td>
            <td>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </td>
            {{ form_end(form) }}
        </tr>
        </tbody>
    </table>
{% endblock %}