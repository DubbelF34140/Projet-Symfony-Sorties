{# templates/participant/modifier_profil.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier votre profil</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'data-turbo': 'false'}}) }}

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center mb-3">
                    {% if participant.photo %}
                        <img id="profilePreview" src="{{ asset('uploads/photos/' ~ participant.photo) }}" alt="Photo de profil" class="img-fluid rounded-circle" style="max-width: 150px; margin: auto;">
                    {% else %}
                        <img id="profilePreview" src="#" alt="Aucune photo de profil" class="img-fluid rounded-circle" style="max-width: 150px; display: none; margin: auto;">
                    {% endif %}
                </div>

                {% for field in ['pseudo', 'email', 'nom', 'prenom', 'telephone'] %}
                    <div class="form-group mb-3">
                        {{ form_label(attribute(form, field), null, {'label_attr': {'class': 'form-label mr-2'}}) }}
                        {{ form_widget(attribute(form, field), {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(attribute(form, field)) }}
                    </div>
                {% endfor %}

                <div class="form-group mb-3">
                    {{ form_label(form.photo) }}
                    {{ form_widget(form.photo, {'attr': {'class': 'form-control', 'accept': 'image/*', 'onchange': 'previewImage(event)'}}) }}
                    {{ form_errors(form.photo) }}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_participant_change_password', {id: participant.id}) }}" class="btn btn-secondary">Modifier le mot de passe</a>
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    {# Script JavaScript pour pr√©visualiser l'image #}
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('profilePreview');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block'; // Affiche l'image
                };
                reader.readAsDataURL(file);
            } else {
                preview.src = '#';
                preview.style.display = 'none'; // Cache l'image si aucun fichier
            }
        }
    </script>
{% endblock %}