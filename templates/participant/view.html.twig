{# templates/participant/view.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.pseudo }}{% endblock %}

{% block body %}
    <h1>Profil de {{ participant.pseudo }}</h1>

    <table class="table">
        <tr>
            <th>Email</th>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ participant.nom }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ participant.prenom }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>{{ participant.telephone }}</td>
        </tr>
        <tr>
            <th>Campus</th>
            <td>{{ participant.campus.nom }}</td>
        </tr>
    </table>

    <a href="{{ path('app_participant_edit', {id: participant.id}) }}" class="btn btn-primary">Modifier</a>
{% endblock %}
