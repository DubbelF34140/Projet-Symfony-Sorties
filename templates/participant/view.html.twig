{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.pseudo }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <button onclick="history.back()" class="btn btn-secondary back-to-list-btn">
            <i class="fas fa-arrow-left"></i>
        </button>

        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0">Profil de {{ participant.pseudo }}</h2>
            </div>

            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-4 text-center">
                        {% if participant.photo %}
                            <img src="{{ asset('uploads/photos/' ~ participant.photo) }}" alt="Photo de profil" class="img-fluid rounded-circle profile-photo">
                        {% else %}
                            <img src="{{ asset('images/profilepicdefault.jpg') }}" alt="Aucune photo de profil" class="img-fluid rounded-circle profile-photo">
                        {% endif %}
                    </div>

                    <div class="col-md-8">
                        <table class="table table-borderless mt-4">
                            <tr>
                                <th>Email</th>
                                <td>{{ participant.email }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ participant.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ participant.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone</th>
                                <td>{{ participant.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Campus</th>
                                <td>{{ participant.campus.nom }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .profile-photo {
            max-width: 150px;
            margin-bottom: 20px;
            border: 5px solid #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

        .table th {
            width: 150px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            box-shadow: 0 4px 6px rgba(0, 0, 123, 255, 0.1);
        }

        .btn-primary:hover {
            background-color: #0069d9;
        }
    </style>
{% endblock %}
