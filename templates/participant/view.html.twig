{# templates/participant/view.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.pseudo }}{% endblock %}

{% block body %}
    <h1>Profil de {{ participant.pseudo }}</h1>

    <table class="table">
        <tr>
            <th>Image</th>
            <td>
                {% if participant.photo %}
                    <img src="{{ asset('uploads/photos/' ~ participant.photo) }}" alt="Photo de profil" class="img-fluid rounded-circle" style="max-width: 150px;">
                {% else %}
                    <img src="{{ asset('images/profilepicdefault.jpg') }}" alt="Aucune photo de profil" class="img-fluid rounded-circle" style="max-width: 150px;">
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ participant.nom }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ participant.prenom }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>{{ participant.telephone }}</td>
        </tr>
        <tr>
            <th>Campus</th>
            <td>{{ participant.campus.nom }}</td>
        </tr>
    </table>

    <a href="{{ path('app_participant_edit', {id: participant.id}) }}" class="btn btn-primary">Modifier</a>
{% endblock %}
