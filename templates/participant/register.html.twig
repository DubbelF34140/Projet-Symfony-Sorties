{# templates/participant/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscription Participant{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Inscription d'un nouveau participant</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="row justify-content-center">
            <div class="col-md-6">
                {% for field in ['pseudo', 'email', 'nom', 'prenom', 'telephone', 'campus'] %}
                    <div class="form-group mb-3">
                        {{ form_label(attribute(form, field), null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(attribute(form, field), {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(attribute(form, field)) }}
                    </div>
                {% endfor %}

                <div class="form-group mb-3">
                    {{ form_label(form.actif, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_errors(form.actif) }}
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
