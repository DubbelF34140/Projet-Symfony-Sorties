{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}

{% block stylesheets %}
    <!-- Utilisation de la version 5.3 de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Gestion des Villes</h2>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                    <tr>
                        <th>Nom de la Ville</th>
                        <th>Code Postal</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ville in villes %}
                        <tr>
                            <td>
                                <span class="badge bg-info text-dark">{{ ville.nom }}</span>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">{{ ville.codePostal }}</span>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('ville_edit', {id: ville.id}) }}" class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <form method="post" action="{{ path('ville_delete', {id: ville.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce ville ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr>
                        {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
                        <td>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la ville'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.nom) }}
                            </div>
                        </td>
                        <td>
                            {{ form_widget(form.codePostal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal de la ville'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.nom) }}
                            </div>
                        </td>
                        <td class="text-center">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="fas fa-plus"></i> Ajouter
                            </button>
                        </td>
                        {{ form_end(form) }}
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
