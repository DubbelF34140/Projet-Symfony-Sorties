{% extends 'base.html.twig' %}

{% block title %}Modifier la ville{% endblock %}

{% block stylesheets %}
    <!-- Utilisation de la version 5.3 de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        /* Custom styles for the form and buttons */
        .form-container {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            background-color: #007bff;
            color: white;
            padding: 15px;
            border-radius: 10px 10px 0 0;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .btn-primary, .btn-secondary {
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
        }

        .btn-secondary {
            margin-top: 20px;
        }

        .btn-secondary:hover {
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.2);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5" style="margin-bottom: 100px">
        <div class="form-container">
            <div class="form-header">
                <h1 class="h4">Modifier la ville</h1>
            </div>

            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            <div class="form-group">
                {{ form_label(form.nom, 'Nom de la ville', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.codePostal, 'Code Postal', {'label_attr': {'class': 'form-label font-weight-bold'}}) }}
                {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.codePostal) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-save"></i> Modifier
            </button>
            {{ form_end(form) }}
            <button onclick="history.back()" class="btn btn-secondary back-to-list-btn">
                <i class="fas fa-arrow-left"></i>
            </button>
        </div>
    </div>
{% endblock %}
