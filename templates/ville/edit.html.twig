{% extends 'base.html.twig' %}

{% block title %}Modifier la ville{% endblock %}

{% block body %}
    <h1>Modifier la ville</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom, 'Nom de la ville') }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
            {{ form_errors(form.nom) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.codePostal, 'Code Postal') }}
        {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
            {{ form_errors(form.codePostal) }}
        </div>
    </div>

    <button type="submit" class="btn btn-success">Modifier</button>
    {{ form_end(form) }}

    <a href="{{ path('app_ville') }}" class="btn btn-secondary mt-4">Retour Ã  la liste des villes</a>
{% endblock %}
